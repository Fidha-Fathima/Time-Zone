<script>
    function removeProduct(wishlistId,proId) {

        $.ajax({
            url: '/deletewishlist-product',
            data: 
            {
                product: proId,
                wishlist :wishlistId,
            },
            method: 'post',
            success: (response) => 
            {

                if (response.removeProduct)
                 {
                    alert("Product Removed Successfully")
                    location.reload()
                }
                else {

                    document.getElementById(proId).innerHTML = response.removeProduct     
                }

            }
        });

    }


</script>



