<div class="p-1 my-container active-cont">
    <section>
        <div class="container-fluid">
            <div class="add-pro-bar">
                <div class="head-pro-bar mt-3">
                    <h2>COUPONS</h2>
                </div>
                <div class="mt-3"><a href="/admin/add-coupons" class="btn btn-success ms-auto mt-3">ADD Coupon</div></a>
            </div>
            <table class="table table-striped w-auto mt-5">

                <thead class="thead-dark">
                    <tr style="text-align: center;">
                        <th scope="col">Coupon Name</th>
                        <th scope="col">Coupon Code</th>
                        <th scope="col">Discount</th>
                        <th scope="col">mintotal</th>
                        {{!-- <th scope="col">Ending Date</th> --}}
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coupons}}
                    <tr style="text-align: center;">
                        <td>{{this.name}}</td>
                        <td> {{this.coupon_code}}</td>
                        <td>₹ {{this.discount}} </td>
                        <td>₹ {{this.mintotal}} </td>
                        {{!-- <td>{{this.enddate}}</td> --}}
                        <td>
                            <a class="btn btn-primary" href="/admin/edit-coupons/{{this._id}}"> Edit </a>
                            <a class="btn btn-danger " href="/admin/delete-coupons/{{this._id}}"
                             onclick="return confirm('Are you sure you want to delete this data')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </section>
</div>