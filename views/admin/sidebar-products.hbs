<!-- Main Wrapper -->


<div class="p-1 my-container active-cont">
    <section>
        <div class="container-fluid">
            <div class="add-pro-bar">
                <div class="head-pro-bar">
                    <h2>PRODUCTS</h2>
                </div>
                <div><a href="/admin/add-products" class="btn btn-success ms-auto mt-3">ADD Product</div></a>

            </div>
            <table class="table table-striped w-auto mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 10%;" scope="col">Image</th>
                        <th style="width: 15%;" scope="col">Name</th>
                        <th style="width: 10%;" scope="col">Category</th>
                        <th style="width: 30%;" scope="col">Description</th>
                        <th style="width: 15%;" scope="col">Price</th>
                        <th style="width: 20%;" scope="col">Options</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>

                        <td style="width: 10%;"><img style="width: 50px; height:50px"
                                src="/product-images/{{this._id}}0.jpg"></td>
                        <td style="width: 15%;font-size:14px;">{{this.name}}</td>
                        <td style="width: 10%;font-size:14px;">{{this.categories.[0].categoryname}}</td>
                        <td style="width: 30%;font-size:14px;">{{this.description}}</td>
                        <td style="width: 15%;font-size:14px;">{{this.price}}</td>
                        <td><a class="btn btn-primary" href="/admin/edit-products/{{this._id}}"> Edit </a>
                            <a class="btn btn-danger " href="/admin/delete-products/{{this._id}}"
                                onclick="return confirm('Are you sure you want to delete this data')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>
</div>