<script>

    function setStatus(id)
     {
    
        const status = document.getElementById(`status${id}`).value
        alert(status)
        $.ajax
        ({
            url: '/admin/change-orderstatus',
            data: 
            {
                orderId:id,
                status: status,
            },
            method: 'post',
            success: (response) =>
            {
                location.reload()
            }
        })
    }

</script>