<div class="p-1 my-container active-cont">
    <section>
        <div class="container-fluid">
            <div class="add-pro-bar">
                <div class="head-pro-bar">
                    <h2>Category</h2>
                </div>
                <div><a href="/admin/add-category" class="btn btn-success ms-auto mt-3">ADD Category</div></a>
            </div>
            <table class="table table-striped w-auto mt-3">
                <thead class="thead-dark">
                    <tr style="text-align:center ;">
                        <th style="width: 20%;" scope="col">Category Name</th>
                        <th style="width: 20%;" scope="col">Description</th>
                        {{!-- <th style="width: 20%;" scope="col"></th> --}}
                        <th style="width: 40%;" scope="col">Options</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each category}}
                    <tr style="text-align: center;">
                        <td>{{this.categoryname}}</td>
                        <td>{{this.description}}</td>
                        {{#if this.offer}}
