                            {{!-- <a href="/admin/add-offer?id={{this._id}}"
                                style="margin-left: 8rem;margin-right: -82px;"> <button type="submit"
                                    class="betaButton mt-1 ml-auto" style="text-decoration: none ; ">Add
                                    Offer</button></a> --}}
                            <a class="btn btn-primary" href="/admin/edit-category/{{this._id}}"> Edit </a>
                            <a class="btn btn-danger " href="/admin/delete-category/{{this._id}}"
                                onclick="return confirm('Are you sure you want to delete this data')">Delete</a>

                        </td>

                    </tr>
                    {{/each}}
                </tbody>
